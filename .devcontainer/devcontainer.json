{
	"name": "n8n",
	"dockerComposeFile": "docker-compose.yml",
	"service": "n8n",
	"workspaceFolder": "/workspaces/n8n",
	"mounts": [
		"type=bind,source=${localWorkspaceFolder},target=/workspaces,consistency=cached",
		"type=bind,source=${localEnv:HOME}/.ssh,target=/home/node/.ssh,consistency=cached",
		"type=bind,source=${localEnv:HOME}/.n8n,target=/home/node/.n8n,consistency=cached"
	],
	"forwardPorts": [8080, 5678],
	"postCreateCommand": "npm config set prefix ~/.npm-global && echo 'export PATH=$HOME/.npm-global/bin:$PATH' >> ~/.bashrc && echo 'export PATH=$HOME/.npm-global/bin:$PATH' >> ~/.profile && corepack prepare --activate && pnpm install && npm install -g @anthropic-ai/claude-code",
	"containerEnv": {
	"PATH": "/home/node/.npm-global/bin:${PATH}"
	},
	"postAttachCommand": {
		"n8n": "pnpm build && pnpm start",
  		"claude": "claude"
	},
	"customizations": {
		"codespaces": {
			"openFiles": ["CONTRIBUTING.md"]
		}
	},
	"hostRequirements": {
		"cpus": 4,
		"memory": "16gb",
		"storage": "32gb"
	}
}
